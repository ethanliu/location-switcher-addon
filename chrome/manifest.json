{
	"manifest_version": 2,
	"name": "Location Switcher",
	"version": "1.3.0",
	"description": "Switching between development and production servers.",
	"homepage_url": "https://github.com/ethanliu/location-switcher-addon",

	"icons": {
		"16": "icons/default-16.png",
		"48": "icons/default-48.png",
		"128": "icons/default-128.png"
	},

	"permissions": [
		"tabs",
		"activeTab",
		"storage"
	],

	"browser_action": {
	//"page_action": {
		"default_icon": {
			"32": "icons/light/default.png"
		},
		//"default_title": "Next location",
		"default_popup": "/popup/popup.html"
	},

	"options_ui": {
		"page": "options.html",
		"chrome_style": true,
		"open_in_tab": true
	},

	"background": {
		"scripts": ["background.js"]
	}

}