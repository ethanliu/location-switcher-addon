{
	"manifest_version": 2,
	"name": "Location Switcher",
	"version": "1.1.1",
	"description": "Switching between development and production servers.",
	"homepage_url": "https://github.com/ethanliu/location-switcher-addon",

	"icons": {
		"48": "icons/light/default.svg",
		"96": "icons/light/default.svg"
	},

	"permissions": [
		"tabs",
		"activeTab",
		"storage"
	],

	"browser_action": {
		"default_icon": {
			"16": "icons/light/default.svg",
			"24": "icons/light/default.svg",
			"32": "icons/light/default.svg"
		},
		"default_title": "Next location",
		"default_popup": "/popup/popup.html"
	},

	"options_ui": {
		"page": "options.html",
		"chrome_style": true,
		"open_in_tab": true
	},

	"background": {
		"scripts": ["background.js"]
	}

}