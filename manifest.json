{
	"manifest_version": 2,
	"name": "Location Switcher",
	"version": "1.0.1",
	"description": "Swtiching between development and production servers.",
	"homepage_url": "https://github.com/ethanliu/location-switcher-addon",

	"icons": {
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
	},

	"applications": {
		"gecko": {
			"id": "location-switcher-addon@creativecrap.com",
			"strict_min_version": "42.0"
		}
	},

	"permissions": [
		"tabs",
		"storage"
	],

	"page_action": {
		"browser_style": true,
		"default_icon": {
			"19": "icons/icon-19.png",
			"38": "icons/icon-38.png"
		},
		"default_title": "Next location"
	},

	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},

	"background": {
		"scripts": ["background.js"]
	}

 }